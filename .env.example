# Copy this file to .env and fill in the credentials you have available.
# Missing values simply disable that provider.

# Required for Wiley downloads
WILEY_TDM_TOKEN=

# Required for Elsevier downloads
ELSEVIER_API_KEY=

# Optional: enables Springer open-access downloads
SPRINGER_API_KEY=

# Contact information for polite API usage
CROSSREF_MAILTO=
OPENALEX_MAILTO=

# Optional: enable Unpaywall fallback for open-access copies
UNPAYWALL_EMAIL=

# Optional: seconds between Crossref PDF requests (default 4.0)
CROSSREF_REQUEST_DELAY=

# Optional: seconds between Wiley requests (default 2.5)
WILEY_REQUEST_DELAY=
